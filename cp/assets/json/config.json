{
    "redactor": [
        {
            "name":     "Imperavi",
            "system":   "imperavi",
            "path":     "/wysiwyg/imperavi/",
            "lib":      {
                "style": [
                    "redactor.css",
                    "plugins/clips/clips.css"
                ],
                "script": [
                    "redactor.min.js",
                    "lang/ru.js",
                    "plugins/clips/clips.js",
                    "plugins/counter/counter.js",
                    "plugins/definedlinks/definedlinks.js",
                    "plugins/filemanager/filemanager.js",
                    "plugins/fontcolor/fontcolor.js",
                    "plugins/fontfamily/fontfamily.js",
                    "plugins/fontsize/fontsize.js",
                    "plugins/fullscreen/fullscreen.js",
                    "plugins/imagemanager/imagemanager.js",
                    "plugins/limiter/limiter.js",
                    "plugins/table/table.js",
                    "plugins/textdirection/textdirection.js",
                    "plugins/textexpander/textexpander.js",
                    "plugins/video/video.js"
                ]
            },
            "default":  "1"
        },
        {
            "name":     "Tinymce",
            "system":   "tinymce",
            "path":      "/wysiwyg/tinymce/",
            "lib":      {
                "script": [
                    "tinymce.min.js"
                ]
            }
        },
        {
            "name":     "Cleditor",
            "system":   "cleditor",
            "path":      "/wysiwyg/cleditor/",
            "lib":      {
                "style": [
                    "jquery.cleditor.css"
                ],
                "script": [
                    "jquery.cleditor.min.js"
                ]
            }
        },
        {
            "name":     "wysiwyg",
            "system":   "wysiwyg",
            "path":      "/wysiwyg/wysiwyg/",
            "lib":      {
                "style": [
                    "wysiwyg-editor.min.css",
                    "font-awesome.min.css"
                ],
                "script": [
                    "wysiwyg.js",
                    "wysiwyg-editor.min.js"
                ]
            }
        }
    ],
    
    "editor_mode": [
        "htmlmixed",
        "php",
        "css",
        "sql",
        "xml",
        "jsx",
        "nginx",
        "javascript",
        "markdown",
        "smarty",
        "scheme",
        "shell",
        "sass"
    ],

    "editor": [
        {
            "name":     "Codemirror",
            "system":   "codemirror",
            "path":     "/codemirror/",
            "lib":      {
                "style": [
                    "codemirror.css"
                ],
                "script": [
                    "codemirror.js",
                    
                    "addon/search/searchcursor.js",
                    "addon/edit/continuelist.js",
                    "addon/edit/matchbrackets.js",
                    "addon/comment/continuecomment.js",
                    "addon/comment/comment.js",
                    
                    "mode/clike/clike.js",
                    
                    "mode/markdown/markdown.js",
                    "mode/htmlembedded/htmlembedded.js",
                    "mode/htmlmixed/htmlmixed.js",

                    "mode/php/php.js",
                    "mode/nginx/nginx.js",
                    "mode/smarty/smarty.js",
                    
                    "mode/xml/xml.js",
                    "mode/yaml/yaml.js",
                    
                    "mode/sql/sql.js",
                    
                    "mode/sass/sass.js",
                    "mode/css/css.js",
                    
                    "mode/scheme/scheme.js",
                    "mode/shell/shell.js",
                    
                    "mode/javascript/javascript.js",
                    "mode/jsx/jsx.js",
                    
                    "emmet.min.js"
                ]
            },
            "default":  "1"
        }
    ],

    "scripts": [
        {
            "path": "/datepicker/",
            "lib":  {
                "script": [
                    "datepicker.js"
                ]
            }
        },
        {
            "path": "/select/",
            "lib":  {
                "script": [
                    "chosen.jquery.min.js"
                ]
            }
        }
    ],
    
    "themes":   []
}
